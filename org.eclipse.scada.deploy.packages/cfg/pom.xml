<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.eclipse.scada.deploy</groupId>
    <artifactId>org.eclipse.scada.deploy.packages.common</artifactId>
    <version>0.1.0.RC1</version>
    <relativePath>../common</relativePath>
  </parent>
  <groupId>org.eclipse.scada.deploy</groupId>
  <artifactId>org.eclipse.scada.configuration</artifactId>
  <version>0.1.0.RC1</version>
  <packaging>pom</packaging>
  <description>Eclipse SCADA base configuration package</description>
  <properties>
    <srcBase>${baseDir}/../../src</srcBase>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.vafer</groupId>
        <artifactId>jdeb</artifactId>
        <executions>
          <execution>
            <id>amd64</id>
            <phase>package</phase>
            <goals>
              <goal>jdeb</goal>
            </goals>
            <configuration>
              <controlDir>${basedir}/src/linux-amd64/deb/control</controlDir>
              <deb>${project.build.directory}/${project.artifactId}_[[version]]_amd64.deb</deb>
              <dataSet>
                <data>
                  <src>${srcBase}/default/eclipsescada.debian.x86_64</src>
                  <dst>eclipsescada</dst>
                  <type>file</type>
                  <mapper>
                    <type>perm</type>
                    <prefix>/etc/default</prefix>
                  </mapper>
                </data>
              </dataSet>
            </configuration>
          </execution>
          <execution>
            <id>i386</id>
            <phase>package</phase>
            <goals>
              <goal>jdeb</goal>
            </goals>
            <configuration>
              <controlDir>${basedir}/src/linux-i386/deb/control</controlDir>
              <deb>${project.build.directory}/${project.artifactId}_[[version]]_i386.deb</deb>
              <dataSet>
                <data>
                  <src>${srcBase}/default/eclipsescada.debian.i386</src>
                  <dst>eclipsescada</dst>
                  <type>file</type>
                  <mapper>
                    <type>perm</type>
                    <prefix>/etc/default</prefix>
                  </mapper>
                </data>
              </dataSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
